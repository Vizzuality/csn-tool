.c-table-list {
  padding: 1rem;
  position: relative;

  > ul {
    padding: 0;
    margin: 0;

    > li {
      list-style: none;
      display: flex;
      align-items: center;

      &.header {
        padding: 1rem 0;
        margin-bottom: 1rem;
        border-bottom: 1px solid $border-color;
      }

      > div {
        display: flex;
        flex-basis: 50%;
        align-items: center;
        justify-content: center;
        text-align: center;
      }
    }
  }
}
