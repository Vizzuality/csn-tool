.c-banner {
  position: relative;
  height: 590px;

  svg {
    margin-bottom: 45px;
  }

  > .content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    z-index: 1;
    background-color: rgba($black, 0.5);

    > .text {
      max-width: 650px;
      margin-bottom: 40px;
      text-align: center;
    }
  }
}
