.c-banner {
  position: fixed;
  top: 50px;
  height: calc(100vh - $header-height - 100px);
  width: 100%;
  z-index: -200;

  > .content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background-color: rgba(#000, 0.5);

    > .text {
      max-width: 650px;
      margin-bottom: 40px;
      text-align: center;
    }
  }
}
